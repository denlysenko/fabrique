<div class="new-products">
  <h3>New products</h3>
  <% if(locals.last){ %>
  <% last.forEach(function(product){ %>
  <div class="product-unit">
    <a href="/product/<%= product.code %>" class="thumbnail <% if(product.sale !== 0){ %> sale-<%= product.sale %><% } %>">
      <img src="<%= product.thumb %>" alt="<%= product.title %>">
    </a>
    <div class="caption">
      <h4><%= product.title %> <span class="price"><%= currency %> <%= (product.price*rate).toFixed(2) %></span>
      </h4>
      <p><%= product.desc %></p>
      <a href="/product/<%= product.code %>" class="btn btn-default" role="button">View</a>
      <a href="/product/basket/<%= product.code %>" class="btn btn-default" role="button" data-action="add-to-basket">Add to basket</a>
    </div>
  </div>
  <% })} %>
</div>  