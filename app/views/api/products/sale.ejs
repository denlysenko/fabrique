<%- include('../partials/header', {title: title})%>
<div class="content">
  <h3>Add Product on sale</h3>
  <hr>
  <%- include('../../messages')%>
  <% if(product) { %>
  <form action="/api/sale/<%= product.productCode %>" method="post">
    <div class="form-group">
      <label>Product Code</label>
      <input type="text" name="code" class="form-control disabled" value="<%= product.productCode %>">
    </div>
    <div class="form-group">
      <label>Product Title</label>
      <input type="text" name="title" class="form-control disabled" value="<%= product.title %>">
    </div>
     <div class="form-group">
      <label>Product Price</label>
      <input type="text" name="price" class="form-control disabled" value="<%= product.price %>">
    </div>
    <div class="form-group">
      <label>Discount</label>
      <input type="text" name="discount" class="form-control" placeholder="Discount">
    </div>
    <hr>
    <div class="form-group">
      <button type="submit" class="btn btn-default">Add On Sale</button>
    </div>
  </form>
  <% } %>
</div>
<%- include('../partials/footer')%>