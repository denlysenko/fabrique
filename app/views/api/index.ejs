<%- include('blocks/header') %>
  <div class="content">
    <h3>Welcome <%= manager %></h3>
    <hr>
    <%- include('../messages')%>
    <div class="row">
      <div class="col-sm-6">
        <h4>Update manager</h4>
        <form action="/api/manager?_method=PUT" method="post">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="New Name" name="name">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" placeholder="New Password" name="passwd">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" placeholder="Confirm Password" name="confirm">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default">Update Manager</button>
          </div>
        </form>
      </div>
    </div>
  </div>
<%- include('blocks/footer') %>      